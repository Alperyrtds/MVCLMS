@using MVCLMS.Models.Entity
@model List<Writers>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Yazarlar</h2>

<table class="table table-bordered ">
    <tr style="background-color:rgb(252,178,22)">
        <th>ID</th>
        <th>AD</th>
        <th>SOYAD</th>

        <th>GÜNCELLE</th>
        <th>SİL</th>
        <th>YAZARIN KİTAPLARI</th>
        
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            
            <td><a href="/Writer/GetWriter/@item.Id" class="btn btn-success">Güncelle</a></td>
       
            <td>
                @Html.ActionLink("Sil", "DeleteWriter", new { id = item.Id }, new
                {
                    @class = "btn btn-danger",
                    onclick = "return confirm('Silmek İstiyor musunuz?')"
                })
        </td>
            <td><a href="/Writer/WriterBooks/@item.Id" class="btn btn-default" style="background-color:lightsalmon">Yazarın Kitapları</a></td>
    </tr>
}
</table>
<a href="/Writer/AddWriter/" class="btn btn-primary">Yeni Yazar Ekle</a>

