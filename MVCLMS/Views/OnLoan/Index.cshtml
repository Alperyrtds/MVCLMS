@using MVCLMS.Models.Entity
@model List<Operations>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Ödünç Kitap Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>İşlem Id</th>
        <th>Kitap Adı</th>
        <th>Kullanıcı</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
        <th>İade Et</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Books.Name</td>
            <td>@item.Users.Name @item.Users.Surname</td>
            <td>@item.Emplooyes.Employee</td>
            <td>@Convert.ToDateTime(item.PurchaseDate).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(item.ReturnDate).ToString("dd/MM/yyyy")</td>
            <td><a href="/OnLoan/ReturnAway/@item.Id" class="btn btn-default" style="background-color:#18cbcb; color:white">Kitabı İade Et</a></td>
            
        </tr>
    }
</table>

