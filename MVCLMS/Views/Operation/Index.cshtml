@using MVCLMS.Models.Entity
@model List<Operations>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>İADESİ YAPILMIŞ KİTAP LİSTESİ</h2>

<table class="table table-bordered">
    <tr>
        <th>İşlem Id</th>
        <th>Kitap Adı</th>
        <th>Kullanıcı</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>Üye İade Tarihi</th>
        <th>Detaylar</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Books.Name</td>
            <td>@item.Users.Name @item.Users.Surname</td>
            <td>@item.Emplooyes.Employee</td>
            <td>@Convert.ToDateTime(item.PurchaseDate).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(item.UserReturnDate).ToString("dd/MM/yyyy")</td>
            <td><a href="/OnLoan/ReturnAway/@item.Id" class="btn btn-default" style="background-color:#18cbcb; color:white">Detaylar</a></td>

        </tr>
    }
</table>
