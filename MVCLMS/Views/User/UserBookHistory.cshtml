@using MVCLMS.Models.Entity;
@model List<Operations>
@{
    ViewBag.Title = "UserBookHistory";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>@ViewBag.u1'in Kitapları</h2>
<br />

<table class="table table-responsive">
    <tr>
        <th>Kitap Adı</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Books.Name</td>
            <td>@item.Emplooyes.Employee</td>
            <td>@Convert.ToDateTime(item.PurchaseDate).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(item.UserReturnDate).ToString("dd/MM/yyyy")</td>
        </tr>
    }
</table>

 