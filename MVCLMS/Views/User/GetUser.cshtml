@model MVCLMS.Models.Entity.Users
@{
    ViewBag.Title = "GetUser";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("UpdateUser", "User", FormMethod.Post))
{
    <div style="margin-bottom: 40px"></div>
    <div class="form-group">
        @Html.LabelFor(x => x.Id)
        @Html.TextBoxFor(x => x.Id, new { @class = "form-control" })
        <br />

        <label>ADI</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        <br />

        <label>Soyadı</label>
        @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
        <br />

        <label>Mail</label>
        @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
        <br />

        <label>Kullanıcı Adı</label>
        @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
        <br />

        <label>Şifre</label>
        @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
        <br />

        <label>Telefon Numarası</label>
        @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
        <br />
        <label>Fotoğraf Linki</label>
        @Html.TextBoxFor(x => x.Photo, new { @class = "form-control" })
        <br />
    </div>
    <div style="margin-top:30px"></div>
    <div>
        <button class="btn btn-primary">Güncelle</button>
    </div>
}
