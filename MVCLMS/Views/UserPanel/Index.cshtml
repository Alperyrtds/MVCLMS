@model MVCLMS.Models.Entity.Users
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<h2>Kütüphane Üye Profil Bilgileri</h2>
<br />
<br />
@using (Html.BeginForm("Index2", "UserPanel", FormMethod.Post))
{
<table class="table table-hover">

    <tr>
        <td>
            <label style="font-weight:bolder">Mail Adresi: </label> @HttpContext.Current.User.Identity.Name
        </td>
    </tr>
    <tr>
        <td>

            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>

            @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>

            @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>

            @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>

            @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>

            @Html.TextBoxFor(x => x.Photo, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>
            <button class="btn btn-warning">Bilgi Güncelle</button>
        </td>
    </tr>
</table>
}

