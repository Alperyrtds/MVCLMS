@model MVCLMS.Models.Entity.Emplooyes
@{
    ViewBag.Title = "GetEmployee";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("UpdateEmployee", "Employee", FormMethod.Post))
{
    <div style="margin-bottom: 40px"></div>
    <div class="form-group">
        @Html.LabelFor(x => x.Id)
        @Html.TextBoxFor(x => x.Id, new { @class = "form-control" })
        <br />

        <label>Personel ADI</label>
        @Html.TextBoxFor(x => x.Employee, new { @class = "form-control" })
    </div>
    <div style="margin-top:30px"></div>
    <div>
        <button class="btn btn-primary">Personel Güncelle</button>
    </div>
}
