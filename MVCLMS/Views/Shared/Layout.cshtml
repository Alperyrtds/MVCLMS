
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: "Lato", sans-serif;
        }

        .sidebar {
            height: 100%;
            width: 250px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #111;
            overflow-x: hidden;
            padding-top: 16px;
        }

            .sidebar a {
                margin-left: 30px;
                padding: 6px 8px 6px 16px;
                margin-bottom: 12px;
                text-decoration: none;
                font-size: 20px;
                color: #ffffff;
                display: block;
            }

                .sidebar a:hover {
                    
                    color: #ff0000;
                    font-family:Forte;
                    -ms-transform: scale(2.50); /* IE 9 */
                    -webkit-transform: scale(2.50); /* Safari 3-8 */
                    transform: scale(1.5);
                }

        .main {
            margin-left: 250px; /* Same as the width of the sidenav */
            padding: 0px 10px;
        }

        @@media screen and (max-height: 450px) {
            .sidebar {
                padding-top: 15px;
            }

                .sidebar a {
                    font-size: 18px;
                }
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <a href="/Statistics/Index/"><i class="glyphicon glyphicon-home"></i>&nbsp; Ana Sayfa</a>
        <a href="/Category/Index/"><i class="glyphicon glyphicon-list"></i>&nbsp; Kategoriler</a>
        <a href="/Book/Index/"><i class="glyphicon glyphicon-book"></i>&nbsp; Kitaplar</a>
        <a href="/Writer/Index/"><i class="glyphicon glyphicon-pencil"></i>&nbsp; Yazarlar</a>
        <a href="/User/Index/"><i class="glyphicon glyphicon-user"></i>&nbsp; Kullanıcılar</a>
        <a href="/Employee/Index/"><i class="glyphicon glyphicon-eye-open"></i>&nbsp; Personeller</a>
        <a href="/OnLoan/GiveAway/"><i class="glyphicon glyphicon-circle-arrow-right"></i>&nbsp; Ödünç Kitap Ver</a>
        <a href="/OnLoan/Index/"><i class="glyphicon glyphicon-circle-arrow-left"></i>&nbsp; Ödünç Kitap Al</a>
        @*<a href="/Statistics/Index/"><i class="glyphicon glyphicon-education"></i>&nbsp; İstatistikler</a>*@
        <a href="/Announ/Index/"><i class="glyphicon glyphicon-phone"></i>&nbsp; Duyurular</a>
        <a href="/Operation/Index/"><i class="glyphicon glyphicon-dashboard"></i>&nbsp; İşlemler</a>
        <a href="/Statistics/Gallery"><i class="glyphicon glyphicon-picture"></i>&nbsp; Galeri</a>
        <a href="/ShowCase/Index/" target="_blank"><i class="glyphicon glyphicon-gift"></i>&nbsp; Vitrin</a>
        <a href="#"><i class="glyphicon glyphicon-cog"></i>&nbsp; Ayarlar</a>
        @*<a href="#"><i class="glyphicon glyphicon-plus"></i>&nbsp; Yardım</a>*@
        <a href="/UserPanel/LogOut/"><i class="glyphicon glyphicon-remove"></i>&nbsp; Çıkış</a>
        
        
    </div>

    <div class="main">
        @RenderBody()
    </div>

</body>
</html>

